<reactiveui:ReactiveUserControl x:Class="Nymph.App.ListItemView"  x:TypeArguments="itemViewModel:IListItemViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:reactiveui="http://reactiveui.net"
             xmlns:local="clr-namespace:Nymph.App"
             xmlns:itemViewModel="clr-namespace:Nymph.Shared.ViewModel.ItemViewModel;assembly=Nymph.Shared"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="CountBlock" FontSize="18"/>
        <ListBox Grid.Row="1" x:Name="Items"/>
    </Grid>
</reactiveui:ReactiveUserControl>
